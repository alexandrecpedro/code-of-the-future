@using negocio.models
@{
    ViewData["Title"] = "Produtos - a - Vencer";
}
<div class="text-center">
    <h1 class="display-4">Produtos à vencer em 3 dias</h1>
    <br>
    <a href="/produtos" class="btn btn-default">Voltar</a>
    <br>
    <br>
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Data de Validade</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Produto produto in ViewBag.listaDeProdutosAVencer)
    {
      <tr>
        <td>@produto.Nome</td>
        <td>@produto.Quantidade</td>
        <td style="color: darkorange;">@produto.Data_vencimento</td>
      </tr>
    }
  </tbody>
</table>
</div>
