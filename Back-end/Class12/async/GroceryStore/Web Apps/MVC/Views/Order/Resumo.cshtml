
@model OrderViewModel;
<h3>Resumo do Order</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Order Number: @(Model.Id)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Your Info</h3>
                <div>@Model.Registration.Name</div>
                <div>@Model.Registration.Phone</div>
            </div>
            <div class="col-md-3">
                @Model.Registration.Email
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>@Model.Registration.Address @Model.Registration.AdditionalAddress - @Model.Registration.District - CEP: @Model.Registration.ZipCode - @Model.Registration.City - @Model.Registration.State</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantity</h3>
            </div>
        </div>

        @foreach (var item in Model.Items)
        {


            <div class="row">
                <div class="col-md-10">
                    <div>@item.Product.Name</div>
                </div>
                <div class="col-md-2">
                    <div class="pull-right">@item.Quantity</div>
                </div>
            </div>
        }

    </div>
</div>
